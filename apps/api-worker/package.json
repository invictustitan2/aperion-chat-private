{
  "name": "@aperion/api-worker",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc",
    "test": "vitest run -c ../../vitest.config.ts",
    "dev:api": "wrangler dev",
    "types:generate": "wrangler types",
    "db:migrate": "wrangler d1 migrations apply aperion-memory",
