    "docs:generate": "tsx scripts/generate-openapi.ts"
  },
  "dependencies": {
    "@aperion/memory-core": "workspace:*",
    "@aperion/policy": "workspace:*",
    "@aperion/shared": "workspace:*",
    "@cloudflare/puppeteer": "^1.0.4",
    "itty-router": "^5.0.22",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.55.0"
  }
}
