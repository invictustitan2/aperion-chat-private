{
  "name": "aperion-chat-private",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "up": "pnpm install && pnpm -r build",
    "check": "./scripts/healthcheck.sh",
    "keys:check": "./scripts/keys-check.sh",
    "dev": "./scripts/dev-shell.sh",
    "fmt:sh": "./scripts/shell-files.sh shfmt | xargs -0 -r shfmt -w",
    "fmt:sh:check": "./scripts/shell-files.sh shfmt | xargs -0 -r shfmt -d",
    "lint:sh": "./scripts/shell-files.sh shellcheck | xargs -0 -r shellcheck",
    "lint:md": "markdownlint-cli2",
    "fmt:md": "markdownlint-cli2 --fix",
    "test:devshell": "bats tests/devshell_secrets.bats tests/devshell_secrets_where.bats tests/devshell_secrets_set.bats tests/devshell_secrets_wizard.bats tests/devshell_access.bats tests/devshell_access_audit.bats tests/devshell_worker_audit.bats tests/devshell_worker_smoke.bats tests/devshell_worker_ensure_domain.bats tests/devshell_worker_secrets.bats tests/devshell_worker_deploy.bats tests/devshell_pages_deploy.bats tests/devshell_deploy_validate.bats tests/devshell_deploy_prod.bats",
    "verify:devshell": "pnpm -s run fmt:sh:check && pnpm -s run lint:sh && pnpm -s run test:devshell",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "test": "pnpm test:node && pnpm test:web",
    "test:unit": "pnpm test",
    "test:node": "vitest run --environment node --exclude \"apps/web/src/**/*.test.*\" --exclude \"apps/web/src/**/*.spec.*\"",
    "test:web": "vitest run --environment jsdom --dir apps/web/src",
    "test:coverage": "pnpm test:coverage:node && pnpm test:coverage:web",
    "test:coverage:node": "vitest run --coverage --environment node --exclude \"apps/web/src/**/*.test.*\" --exclude \"apps/web/src/**/*.spec.*\"",
    "test:coverage:web": "vitest run --coverage --environment jsdom --dir apps/web/src",
    "coverage:report": "node ./scripts/coverage/report.mjs",
    "test:e2e": "playwright test",
    "guard:prod-secrets": "node ./scripts/guard-prod-secrets.mjs",
    "guard:config-drift": "node ./scripts/guard-config-drift.mjs",
    "smoke:prod:interactive": "bash ./prod-smoke-interactive.sh",
    "ship": "echo 'ðŸš€ Running verification pipeline...'; pnpm typecheck && pnpm lint && pnpm test && echo 'âœ… Ready to Ship!'",
    "verify": "pnpm typecheck && pnpm lint && pnpm test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.18.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.55.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint-cli2 --fix",
      "markdownlint-cli2"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
